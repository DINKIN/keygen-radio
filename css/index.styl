@font-face
  font-family 'Chintzy'
  font-style normal
  font-weight 400
  src url('/s/fonts/chintzy.eot')
  src url('/s/fonts/chintzy.eot?#iefix') format('embedded-opentype'),
      url('/s/fonts/chintzy.woff') format('woff'),
      url('/s/fonts/chintzy.ttf')  format('truetype');

@import 'nib'

normalize-css()

body
  background #000
  font-family 'Chintzy'
  color #0f0
  letter-spacing 2px

h1
  font-size 40px
  letter-spacing 4px

.song-name
  font-size 24px
  letter-spacing 3px

a
  color #0c0

h1, .song-name, footer
  text-align center

footer
  font-size 14px
